{
  "name": "@ricofritzsche/eventstore",
  "version": "1.0.8",
  "description": "A TypeScript event sourcing library with pluggable persistence backends (Postgres, MongoDB), real-time subscriptions, and projection support for building responsive event-sourced applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./postgres": {
      "types": "./dist/postgres.d.ts",
      "default": "./dist/postgres.js"
    },
    "./mongodb": {
      "types": "./dist/mongodb.d.ts",
      "default": "./dist/mongodb.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "ts-node src/index.ts",
    "example": "ts-node src/examples/banking/cli.ts",
    "simple": "ts-node simple.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "prepack": "npm run build"
  },
  "keywords": [
    "eventstore",
    "event-sourcing",
    "eventsourcing",
    "typescript",
    "events",
    "postgresql",
    "postgres",
    "mongodb",
    "mongo",
    "real-time",
    "subscriptions",
    "projections",
    "event-driven",
    "cqrs"
  ],
  "author": "Rico Fritzsche",
  "contributors": [
    "Ralf Westphal"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "mongodb": "^6.0.0",
    "prettier": "^3.0.0",
    "pg": "^8.11.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^17.0.1",
    "uuid": "^11.1.0"
  },
  "peerDependencies": {
    "pg": "^8.11.0",
    "mongodb": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "pg": {
      "optional": true
    },
    "mongodb": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.19.0"
  },
  "overrides": {
    "glob": "^10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ricofritzsche/eventstore-typescript"
  },
  "bugs": {
    "url": "https://github.com/ricofritzsche/eventstore-typescript/issues"
  },
  "homepage": "https://github.com/ricofritzsche/eventstore-typescript#readme"
}
